<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.CAMERA" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"></uses-permission>


    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.SesionLiteExpirada"
            android:exported="false" />
        <activity
            android:name=".Activity.NovedadActivity"
            android:exported="true"
            android:label="@string/title_activity_novedad"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.NoticiaActivity"
            android:exported="true"
            android:label="@string/title_activity_noticia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.NoticiasActivity"
            android:exported="true"
            android:label="@string/title_activity_noticias"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ComunasActivity"
            android:exported="true"
            android:label="@string/title_activity_comunas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.NovedadesActivity"
            android:exported="true"
            android:label="@string/title_activity_novedades"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.IdentityControlCarab"
            android:exported="false"
            android:label="@string/title_activity_idc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CarabSelectorActivity"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.EditarPerfilActivity"
            android:exported="true"
            android:label="@string/title_activity_editar_perfil"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.PerfilActivity"
            android:exported="true"
            android:label="@string/title_activity_perfil"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ContactoActivity"
            android:exported="true"
            android:label="@string/title_activity_contacto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.TerminosCondiciones"
            android:exported="true"
            android:label="@string/title_activity_terminos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.TutorialRegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.TutorialDetectorActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.DialogPatenteRobadaActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.AboutActivity"
            android:exported="true"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.VisualizadorDeImagenesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.TensorFlow.DetectorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.GaleryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.LogoInicial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Activity.configuracionActivity" />
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/.
        -->
        <activity
            android:name=".Activity.NotificacionAutoVistoActivity"
            android:label="@string/title_activity_auto_visto"
            android:parentActivityName="Activity.NoticiaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.RegistrarActivity"
            android:label="@string/title_activity_registrar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.OlvidoContrasenaActivity"
            android:label="@string/title_activity_olvido_contrasena"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logoredondeado" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <receiver android:name=".Class.BroadcastReceiver.CallBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".Class.BroadcastReceiver.MyBroadcastReceiverLocation"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".Service.LocationService"
            android:enabled="true"
            android:exported="true"
            android:process=":locationService" />
        <service
            android:name=".Service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>